{
    "compilerOptions": {
        // Basic Options
        "target": "es5",
        "module": "commonjs",
        "lib": ["esnext", "dom"],
        "allowJs": false,
        "checkJs": false,
        "declaration": true,
        "sourceMap": true,
        "downlevelIteration": true,
        "outDir": "dist",

        // Strict Type-Checking Options
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "noImplicitThis": true,
        "alwaysStrict": true,

        // Additional Checks
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": false,

        // Module Resolution Options
        "moduleResolution": "node",
        "skipLibCheck": true
    },
    "include": ["src"]
}
